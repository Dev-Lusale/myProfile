@inherits LayoutComponentBase
@inject IAnalyticsService AnalyticsService
@inject NavigationManager Navigation
@inject Portfolio.Shared.Services.SidebarService SidebarService
@inject IJSRuntime JSRuntime
@implements IDisposable

<div class="page" @onkeydown="HandleKeyDown" tabindex="0">
    <div class="sidebar @(isCollapsed ? "collapsed" : "")">
        <NavMenu />
    </div>

    <main class="main-content @(isCollapsed ? "sidebar-collapsed" : "")">
        <TopNavBar />
        
        <article class="content">
            @Body
        </article>
    </main>
    
    @if (isCollapsed)
    {
        <div class="sidebar-overlay" @onclick="CloseSidebar"></div>
    }
</div>

@code {
    private bool isCollapsed = false;

    protected override async Task OnInitializedAsync()
    {
        await AnalyticsService.InitializeAsync();
        
        // Track page view
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        await AnalyticsService.TrackPageViewAsync(uri.PathAndQuery, "Portfolio");
        
        // Initialize sidebar state based on screen size
        await InitializeSidebarState();
        
        // Subscribe to sidebar state changes
        SidebarService.OnStateChanged += OnSidebarStateChanged;
    }

    private async Task InitializeSidebarState()
    {
        try
        {
            // Check if we're on mobile or tablet
            var screenWidth = await JSRuntime.InvokeAsync<int>("eval", "window.innerWidth");
            
            if (screenWidth <= 768)
            {
                // On mobile/small tablet, start with sidebar collapsed
                SidebarService.CollapseSidebar();
            }
            else
            {
                // On desktop/large tablet, start with sidebar expanded
                SidebarService.ExpandSidebar();
            }
        }
        catch
        {
            // Fallback: start collapsed for safety
            SidebarService.CollapseSidebar();
        }
        
        isCollapsed = SidebarService.IsCollapsed;
    }

    private void OnSidebarStateChanged()
    {
        isCollapsed = SidebarService.IsCollapsed;
        StateHasChanged();
    }
    
    private void CloseSidebar()
    {
        SidebarService.CollapseSidebar();
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        SidebarService.HandleKeyboardShortcut(e.Key, e.CtrlKey);
    }
    
    public void Dispose()
    {
        SidebarService.OnStateChanged -= OnSidebarStateChanged;
    }
}
<style>
    .page {
        position: relative;
        display: flex;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .sidebar {
        width: 280px;
        background: #1a1d29;
        position: fixed;
        left: 0;
        top: 0;
        height: 100vh;
        z-index: 1001;
        box-shadow: 2px 0 20px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(10px);
    }

    .sidebar.collapsed {
        transform: translateX(-100%);
    }

    .main-content {
        flex: 1;
        margin-left: 280px;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        width: calc(100vw - 280px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .main-content.sidebar-collapsed {
        margin-left: 0;
        width: 100vw;
    }

    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.6);
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        backdrop-filter: blur(2px);
    }

    .content {
        flex: 1;
        padding: 1.5rem;
        background: #f8f9fa;
        overflow-y: auto;
        overflow-x: hidden;
        height: calc(100vh - 70px);
    }

    /* Tablet Responsive (768px - 1024px) */
    @@media (max-width: 1024px) and (min-width: 769px) {
        .sidebar {
            width: 260px;
        }
        
        .main-content {
            margin-left: 260px;
            width: calc(100vw - 260px);
        }
        
        .content {
            padding: 1.25rem;
        }
    }

    /* Mobile Responsive (max-width: 768px) */
    @@media (max-width: 768px) {
        .sidebar {
            width: 280px;
            transform: translateX(-100%);
        }

        .sidebar:not(.collapsed) {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
            width: 100vw;
        }

        .sidebar-overlay {
            opacity: 1;
            visibility: visible;
        }

        .content {
            padding: 1rem;
            height: calc(100vh - 60px);
        }
    }

    /* Small Mobile (max-width: 480px) */
    @@media (max-width: 480px) {
        .sidebar {
            width: 100vw;
        }
        
        .content {
            padding: 0.75rem;
        }
    }

    /* Landscape Mobile (orientation: landscape) and (max-height: 600px) */
    @@media (orientation: landscape) and (max-height: 600px) {
        .content {
            padding: 0.5rem;
            height: calc(100vh - 50px);
        }
        
        .sidebar {
            width: 260px;
        }
    }

    /* High DPI Displays */
    @@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .sidebar {
            box-shadow: 2px 0 25px rgba(0, 0, 0, 0.2);
        }
    }

    /* Dark Mode Support */
    @@media (prefers-color-scheme: dark) {
        .content {
            background: #121212;
        }
    }

    /* Reduced Motion Support */
    @@media (prefers-reduced-motion: reduce) {
        .sidebar,
        .main-content,
        .sidebar-overlay,
        .page {
            transition: none;
        }
    }

    /* Print Styles */
    @@media print {
        .sidebar {
            display: none;
        }
        
        .main-content {
            margin-left: 0;
            width: 100%;
        }
        
        .content {
            padding: 0;
        }
    }
</style>