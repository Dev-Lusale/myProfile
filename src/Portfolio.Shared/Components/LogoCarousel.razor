            padding: 1.5rem 0;
        }
        
        .logo-item {
            min-height: 60px;
            padding: 0.75rem;
        }
    }

    /* High DPI Displays */
    @@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .logo-item {
            box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
        }
        
        .logo-item:hover {
            box-shadow: 0 15px 50px rgba(102, 126, 234, 0.2);
        }
    }

    /* Reduced Motion */
    @@media (prefers-reduced-motion: reduce) {
        .logo-carousel-track {
            animation: none;
        }
        
        .logo-item,
        .logo-image {
            transition: none;
        }
        
        .logo-item:hover {
            transform: none;
        }
        
        .logo-item:hover .logo-image {
            transform: none;
        }
    }

    /* Print Styles */
    @@media print {
        .logo-carousel-section {
            display: none;
